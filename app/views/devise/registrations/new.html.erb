<div class="container">
  <div class="container_box">
    <div class="news_side_header">
      <%= render 'users/sidebar' %>
      <div class="form_box">
        <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div style="margin-bottom: 15px;">
            <%= f.label :名前, style: "display: block; margin-bottom: 5px;" %>
            <%= f.text_field :name, autofocus: true, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
          </div>

          <div style="margin-bottom: 15px;">
            <%= f.label :email, style: "display: block; margin-bottom: 5px;" %>
            <%= f.email_field :email, autocomplete: "email", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
          </div>

          <div style="margin-bottom: 15px;">
            <%= f.label :パスワード, style: "display: block; margin-bottom: 5px;" %>
            <% if @minimum_password_length %>
              <small style="display: block; margin-bottom: 5px;">(<%= @minimum_password_length %> 文字以上必要です)</small>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
          </div>

          <div style="margin-bottom: 20px;">
            <%= f.label :確認用パスワード（同じパスワードを再度入力してください）, style: "display: block; margin-bottom: 5px;" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
          </div>

          <div style="margin-bottom: 15px;">
            <%= f.label :管理者権限, style: "display: block; margin-bottom: 5px;" %>
            <%= f.check_box :admin %>
            <span>このユーザーに管理者権限を付与する場合はチェック</span>
          </div>

          <div style="margin-bottom: 20px;">
            <%= f.submit "ユーザー登録", style: "background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>