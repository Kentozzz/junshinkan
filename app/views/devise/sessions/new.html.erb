<div class="container">
  <div class="container_box">
  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div style="margin-bottom: 15px;">
      <%= f.label :email, style: "display: block; margin-bottom: 5px;" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= f.label :パスワード, style: "display: block; margin-bottom: 5px;" %>
      <%= f.password_field :password, autocomplete: "current-password", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div style="margin-bottom: 15px;">
        <%= f.label :remember_me, style: "display: block; margin-bottom: 5px;" %>
        <%= f.check_box :remember_me %>
        <span>ログイン情報を記憶</span>
      </div>
    <% end %>

    <div style="margin-bottom: 20px;">
      <%= f.submit "Log in", style: "background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;" %>
    </div>
  <% end %>


  </div>
</div>